<?xml version="1.0" encoding="utf-8"?>
<!-- Implementando DataBinding -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<data>
    <variable
        name="viewModel"
        type="com.vasquez.navegacion_fragmentacion.MainViewModel" />
</data>
<LinearLayout
    android:padding="@dimen/dafault_gap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:text="Datos Ingresados"/>

    <TextView
        android:padding="@dimen/dafault_gap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textSize="18dp"
        android:text="Nombres :"/>

    <TextView
        android:padding="@dimen/default_text"
        android:id="@+id/name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="@{viewModel.name}" />

    <TextView
        android:padding="@dimen/dafault_gap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textSize="18dp"
        android:text="Apellido :"/>

    <TextView
        android:padding="@dimen/default_text"
        android:id="@+id/lastname_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="@{viewModel.lastName}" />

     <TextView
        android:padding="@dimen/dafault_gap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textSize="18dp"
        android:text="Universidad:"/>

    <TextView
        android:padding="@dimen/default_text"
        android:id="@+id/birthday_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="@{viewModel.university}" />

    <TextView
        android:padding="@dimen/dafault_gap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textSize="18dp"
        android:text="Carrera Universitaria :"/>

    <TextView
        android:padding="@dimen/default_text"
        android:id="@+id/carrer_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="@{viewModel.carrer}" />

    <TextView
        android:padding="@dimen/dafault_gap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textSize="18dp"
        android:text="Fecha de Nacimiento:"/>

    <TextView
        android:padding="@dimen/default_text"
        android:id="@+id/university_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="@{viewModel.birthday}" />

    <TextView
        android:padding="@dimen/dafault_gap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textSize="18dp"
        android:text="Correo Electronico :"/>

    <TextView
        android:padding="@dimen/default_text"
        android:id="@+id/email_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="@{viewModel.email}" />

    <TextView
        android:padding="@dimen/dafault_gap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textSize="18dp"
        android:text="Numero de Telefono:"/>

    <TextView
        android:padding="@dimen/default_text"
        android:id="@+id/phone_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="@{viewModel.phone}" />


</LinearLayout>
</layout>